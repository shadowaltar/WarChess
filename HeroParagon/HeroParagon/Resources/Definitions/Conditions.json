[
    {
        "name": "ammo_check",
        "formula": [
            {
                "operand1": {
                    "stat": "ammo",
                    "of": "self"
                },
                "operator": ">",
                "operand2": 0
            }
        ],
        "invert_result": false
    },
    {
        "name": "max_multi_attack_check",
        "formula": [
            {
                "operand1": {
                    "stat": "current_multi_attack_count",
                    "of": "self"
                },
                "operator": "equals_to",
                "operand2": 0
            }
        ],
        "invert_result": true
    },
    {
        "name": "select_affected_unit",
        "formula": [
            {
                "operand1": {
                    "stat": "label",
                    "of": "selected_target"
                },
                "operator": "contains",
                "operand2": "$1"
            }
        ]
    }
]